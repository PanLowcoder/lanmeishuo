.page .container {
  background: #FEFFFE;
  color: #313836;
}
.page .container .nav {
  display: flex;
  justify-content: space-around;
  margin-bottom: 16px;
}
.page .container .nav .nav-item {
  display: flex;
  flex-direction: column;
}
.page .container .nav .nav-item .img {
  width: 96px;
  height: 96px;
  border-radius: 5px 0px 0px 0px;
}
.page .container .nav .nav-item .text {
  display: flex;
  justify-content: center;
  font-size: 11px;
}
.page .container .content {
  width: 90%;
  margin: auto;
}
.page .container .content .fortune {
  padding: 30px;
  background: #FFFFFF;
  box-shadow: 0px 8px 15px 0px rgba(150, 159, 171, 0.23);
  border-radius: 5px;
  font-size: 28px;
}
.page .container .content .fortune .fortune-header {
  display: flex;
  justify-content: space-between;
}
.page .container .content .fortune .fortune-header .header-left {
  display: flex;
}
.page .container .content .fortune .fortune-header .header-left .left-img {
  padding-left: 8px;
}
.page .container .content .fortune .fortune-header .header-left .left-img .img {
  width: 28px;
  height: 28px;
  margin-left: 10px;
}
.page .container .content .fortune .fortune-header .header-right {
  display: flex;
}
.page .container .content .fortune .fortune-content {
  margin-top: 24px;
}
.page .container .content .fortune .fortune-content .des-title {
  font-weight: 800;
}
.page .container .content .fortune .fortune-content .des .des-content {
  font-size: 18px ;
}
.page .container .content .fortune .fortune-content .des .des-content .item {
  display: flex;
  align-items: center;
}
.page .container .content .fortune .fortune-content .des .des-content .item .progress {
  width: 172px;
  margin-left: 18px;
}
.page .container .content .fortune .fortune-content .textarea {
  font-size: 22px;
  display: -webkit-box;
  overflow: hidden;
  /* autoprefixer: ignore next */
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.page .container .content .today {
  margin: 32px auto;
  height: 222px;
}
.page .container .content .today .img {
  width: 100%;
  z-index: 0;
}
.page .container .content .today .info {
  position: relative;
  top: -210px;
  margin-left: 287px;
  margin-right: 16px;
  z-index: 100;
  color: #FFFFFF;
}
.page .container .content .today .info .date {
  font-size: 22px;
  margin-left: 140px;
}
.page .container .content .today .info .today-content {
  font-size: 24px;
  margin-top: 16px;
}
.page .container .content .art-title {
  display: flex;
  justify-content: space-between;
  margin-bottom: 8px;
}
.page .container .content .art-title .left .text {
  font-size: 28px;
}
.page .container .content .art-title .right .more {
  font-size: 22px;
}
