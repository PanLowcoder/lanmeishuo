body {
  background: #f6f7f9;
}
.login .purple {
  color: #6C5FD3;
}
.login .container {
  margin: 32px;
}
.login .container .title {
  font-size: 96px;
  font-family: 'SJfengyu-Regular, SJfengyu';
  font-weight: 400;
  line-height: 114px;
  margin-top: 186px;
}
.login .container .box {
  margin-top: 16px;
  background: #ffffff;
  font-size: 24px;
  border-radius: 10px;
  padding: 32px;
}
.login .container .box .text {
  font-size: 28px;
}
.login .container .box .mobile-con,
.login .container .box .code-con {
  height: 80px;
  display: flex;
  align-items: center;
  padding: 0 17px;
  margin: 34px;
  background: rgba(0, 0, 0, 0.1);
  color: #313836;
  border-radius: 48px;
}
.login .container .box .btn-con {
  width: 52%;
  height: 80px;
  background: linear-gradient(112deg, #AF88FF 0%, #8A7EE7 100%);
  border-radius: 20px;
  margin: 38px auto;
}
.login .container .box .btn-con .btn-text {
  line-height: 80px;
  display: flex;
  justify-content: center;
  color: #ffffff;
  font-size: 28px;
}
.login .container .box .agreement-con .des {
  display: inline-block;
  margin-left: 6px;
}
.login .container .wechat-con {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 24px;
  color: #ACAEAD;
  margin-top: 190px;
}
.login .container .wechat-con .img-con {
  margin-top: 34px;
}
.login .container .wechat-con .img-con .wechat-img {
  width: 66px;
  height: 54px;
  padding: 8px 16px;
  justify-content: center;
}
