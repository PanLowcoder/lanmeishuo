.articles-li {
  box-shadow: 0px 16px 30px 0px rgba(150, 159, 171, 0.23);
  padding: 22px 38px 30px 40px;
  margin-bottom: 32px;
  color: #313836;
  font-weight: 400;
  background: #FFFFFF;
}
.articles-li .article-title {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20px;
}
.articles-li .article-title .title-text {
  font-size: 28px;
}
.articles-li .article-title .title-time {
  font-size: 18px;
  opacity: 59%;
}
.articles-li .article-img {
  width: 100%;
  height: 274px;
  border-radius: 10px;
}
.articles-li .article-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.articles-li .article-footer .left-con {
  display: flex;
  font-size: 24px;
}
.articles-li .article-footer .left-con .left-img {
  margin: 14px 14px 12px 12px;
  width: 54px;
  height: 54px;
}
.articles-li .article-footer .left-con .author {
  display: flex;
  align-items: center;
}
.articles-li .article-footer .right-con {
  display: flex;
  font-size: 22px ;
  opacity: 59%;
}
.articles-li .article-footer .right-con .tab {
  margin-left: 24px;
  display: flex;
  align-items: center;
}
.articles-li .article-footer .right-con .tab .icon-img {
  width: 30px;
  height: 28px;
}
.articles-li .article-footer .right-con .tab .icon-text {
  padding-left: 2px;
}
