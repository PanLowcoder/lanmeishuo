.userCenter {
  background: #F6F7F9;
  width: 100%;
  height: 100%;
  font-size: 28px;
  color: #313836;
}
.userCenter .list-con {
  margin-top: 85px;
}
.userCenter .list-con .item {
  background: #FFFFFF;
  padding-left: 34px;
  padding-right: 36px;
}
.userCenter .list-con .item .top {
  padding: 30px 0 32px 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.userCenter .list-con .item .foot {
  width: 100%;
  height: 1px;
  background: #D8D8D8;
  border-radius: 2px;
  opacity: 0.1;
  border: 1px solid #979797;
}
.userCenter .list-con .record {
  margin-top: 32px;
}
.userCenter .list-con .info {
  display: flex;
  align-items: center;
}
.userCenter .list-con .info .content {
  opacity: 0.79;
}
.userCenter .list-con .info .icon {
  width: 22.62px;
  height: 22.62px;
  margin-left: 16px;
}
